{
  "name": "eccrypto-js",
  "description": "Elliptic curve cryptography library (NodeJS, Browser and Pure JS)",
  "version": "5.2.0",
  "author": "Pedro Gomes <github.com/pedrouid>",
  "license": "MIT",
  "keywords": [
    "ecc",
    "ecdsa",
    "ecdh",
    "ecies",
    "crypto",
    "cryptography",
    "secp256k1",
    "K-256",
    "elliptic",
    "curve"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/pedrouid/eccrypto-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrouid/eccrypto-js.git"
  },
  "bugs": {
    "url": "https://github.com/pedrouid/eccrypto-js/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf dist",
    "build:cjs": "./node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build": "yarn clean && yarn build:cjs && yarn build:umd",
    "test": "tsdx test ./test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build && yarn test",
    "publish:beta": "yarn publish --tag=beta"
  },
  "dependencies": {
    "aes-js": "3.1.2",
    "enc-utils": "2.1.0",
    "hash.js": "1.1.7",
    "js-sha3": "0.8.0",
    "randombytes": "2.1.0",
    "secp256k1": "3.8.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "1.0.22",
    "@types/aes-js": "3.1.0",
    "@types/eccrypto": "1.1.1",
    "@types/elliptic": "6.4.12",
    "@types/jest": "25.1.1",
    "@types/node": "13.7.0",
    "@types/randombytes": "2.0.0",
    "eccrypto": "1.1.3",
    "husky": "4.2.1",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typescript": "3.7.5",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
